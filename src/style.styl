$black = #000
$background = #787878
$gutter = 2px
$size = 8px

$wrapper = scrollable-wrapper
$view = view
$track = scrollbar
$thumb = thumb
$shadow = shadow

$h = is-horizontal
$v = is-vertical
$show = is-visible
$hide = is-invisible
$natural = is-default
$prevent = is-hidden-default
$unselect = is-unselect

.{$wrapper}
  position relative
  width 100%
  height 100%
  overflow hidden !important
  box-sizing border-box

  // Track
  .{$track}
    position absolute
    right $gutter
    bottom $gutter
    z-index 1
    border-radius $size
    opacity 0
    transition opacity 680ms linear
    pointer-events none
    box-sizing border-box

    &.{$v}
      top $gutter
      width $size

    &.{$h}
      left $gutter
      height $size

    &.{$hide}
      display none !important

  &:hover > .{$track},
  &:focus > .{$track},
  &:active > .{$track}
    opacity 1
    pointer-events auto
    transition opacity 120ms linear

  // Thumb
  .{$thumb}
    width 0
    height 0
    border-radius inherit
    background-color rgba($background, 0.5)
    transform translate3d(0,0,0)
    box-sizing border-box

    &:hover
      background-color rgba($background, 0.6)

    &:active
      background-color rgba($background, 0.75)

  .{$track}.{$v} .{$thumb}
    width 100%

  .{$track}.{$h} .{$thumb}
    height 100%
  
  // Shadow
  .{$shadow}
    position absolute
    right 0
    top 0
    pointer-events none
    z-index 2

    $shadow-size = $size / 2

    &.{$h}
      width $gutter
      height 100%

      &.{$show}
        box-shadow inset $black -1 * $shadow-size 0 $shadow-size -1 * $shadow-size

    &.{$v}
      width 100%
      height $gutter

      &.{$show}
        box-shadow inset $black 0 $shadow-size $shadow-size -1 * $shadow-size

    &.{$hide}
      visibility hidden !important

  // View
  .{$view}
    width 100%
    height 100%
    margin 0 !important
    padding 0 !important
    border 0 !important
    overflow scroll
    box-sizing border-box
    -webkit-overflow-scrolling touch

  &.{$prevent} > .{$view}
    scrollbar-width 0

    &::-webkit-scrollbar
      width 0
      height 0

  &.{$unselect}
    user-select none

  &.{$natural}
    -webkit-overflow-scrolling touch

    .{$track}
      display none !important
